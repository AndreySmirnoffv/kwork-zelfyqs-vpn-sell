generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id              BigInt   @id @default(autoincrement())
  firstname       String?
  lastname        String?
  chatId          BigInt   @unique
  balance         BigInt   @default(0)
  isAdmin         Boolean
  ref             String
  origin          String
  username        String
  blocked         Boolean  @default(false)
  refBalance      BigInt   @default(0)
  subStatus       Boolean  @default(false)
  subscriptionEnd DateTime @default(now())
  currentSubCount Int      @default(0)
  paidCard        Boolean  @default(false)
  subscriptionType String @default("")
}

model payments {
  id        BigInt  @id @default(autoincrement())
  paymentId String  @unique
  userId    String
  amount    String
  status    String
  isPaid    Boolean
}

model refpayments {
  id     BigInt @id @default(autoincrement())
  amount BigInt
  userId BigInt
}
